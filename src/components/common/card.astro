---
const { title, image, description, stack, githubUrl, liveUrl } =
  Astro.props as CardProps;

import { Image } from "@astrojs/image/components";
---

<article class="group bg-transparent w-full">
  <div class="w-full h-0.5 my-5"></div>
  <div class="flex group-odd:flex-row even:flex-row-reverse">
    <div class="p-5 max-w-[50vw]">
      <h3 class="text-3xl font-semibold text-white mb-5">{title}</h3>
      <div class="flex gap-2 flex-wrap mb-5">
        {
          stack.map((stackItem) => (
            <span class="inline-block bg-scarpa-flow-700 text-scarpa-flow-50 px-2 py-0.5 text-sm">
              {stackItem}
            </span>
          ))
        }
      </div>
      <div class="mb-7">
        <p class="text-scarpa-flow-50">
          {description}
        </p>
      </div>
      <div class="space-x-3">
        <a href={liveUrl} target="_blank" class="link link-primary">live demo</a
        >
        <a href={githubUrl} target="_blank" class="link link-secondary">code</a>
      </div>
    </div>
    <div class="grow h-[320px] w-[320px]">
      <Image
        src={import(`../../images/${image}.webp`)}
        alt={`screenshot image of ${title}`}
        width={320}
        height={320}
      />
    </div>
  </div>
</article>

